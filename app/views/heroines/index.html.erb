<h2>All Heroines</h2>
<% if !@query %>
  Filter
  <%= form_tag("/heroines/search", method: "get") do %>
    <%= label_tag(:q, "Search for heroines by power name:") %>
    <%= text_field_tag(:q) %>
    <%= submit_tag("Search") %>
  <% end %>
<% end %>

<% if @query %>
  <h3>who match your query of: '<%= @query %>'</h3>
<% end %>

<ul>
  <% @heroines.each do |heroine| %>
    <li>
      <%= link_to heroine.super_name, heroine_path(heroine) %>
    </li>
    <br>
  <% end %>
</ul>
<% if @query %>
  <form method="get" action="/heroines">
    <input value="Undo Search Query" type="submit" />
  </form>
<% end %>
